/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.config-container {
    width: 100%;
    height: 100%;
    background-image: url(../../image/background.png);
    background-size: cover;
}
.config-title {
    text-align: center;
    font-size: 20px;
    padding: 15px;
}

.role-area {
    width: 25%;
     height: 100px;
     display: inline-block;
     margin: 0 auto;
     text-align: center;
     font-size: 14px;
}
.image-icon {
    width:70px;
    height:70px;
    border-radius:15px;
    opacity: .8;
    padding: 3px;
}
.image-choose {
    opacity: 1;
    border: 3px solid white;
    padding: 0;
    width:70px;
    height:70px;
    border-radius:15px;
}
.image-area {
    position: relative;
}
.image-number {
    position: absolute;
    top: 10px;
    right: 20px;
    color: white;
}

.config-cover {
    position:absolute;
    width:100%;
    height:100%;
    background-color:rgba(0,0,0,.7);
    text-align: center;
    color: white;
    z-index: 2;
}

.tips-image{
    width: 100px;
    height: 100px;
    padding-top: 40%;
    padding-bottom: 5%;
}

.number-area {
    text-align: center;
    width: 80%;
    margin: 15% auto;
}
.number-item {
    text-align: center;
    float: left;
    width: 33%;
    line-height: 80px;
    font-size: 30px;
}
.number-reduce {
    text-align: right;
}
.number-increase {
    text-align: left;
}
.control-image {
    width: 70px;
    height: 70px;
}

.play-button {
    margin: 20px auto;
    width: 200px;
}
.play-image {
    width: 200px;
    height: 60px;
}